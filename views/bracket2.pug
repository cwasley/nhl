              input.form-check-input(type='radio' name='r1i0games' value='5')
              label.form-check-label 5
            div.form-check.form-check-inline
              input.form-check-input(type='radio' name='r1i0games' value='6')
              label.form-check-label 6
            div.form-check.form-check-inline
              input.form-check-input(type='radio' name='r1i0games' value='7')
              label.form-check-label 7
            p(style="display:inline;") games
      br
      div.card.bg-light(style='text-align: center;')
        div.card-body(style='display: inline-block;color: black;')
          div.btn-group-vertical
            button.btn.btn-raised.btn-secondary(type='button') Winnipeg Jets
            p.mx-auto v.
            button.btn.btn-raised.btn-secondary(type='button') Minnesota Wild
            input(type='Text' style='display:none;' name='r1i1winner')
