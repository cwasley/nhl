            div
              input.slider#r1i4games(type="text")
              p games
        br
        div.card.bg-light(style='text-align: center;')
          div.card-body.bottom-group#r1i5(style='display: inline-block; color: black;')
            h5.card-title Atlantic Quarter-final 2
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r1i5winner(type='text')
                input#r1i5loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[10][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[11][0]}}
            div
              input.slider#r1i5games(type="text")
              p games
        br
        a.btn.btn-primary.btn-raised.float-left(ng-click="back('west2')") Back
        a.btn.btn-primary.btn-raised.float-right.buttontooltip(ng-click="next('east1', 'east2')" data-toggle='tooltip' title='Please fill in your guesses for both winning teams.' style='opacity: 0.4;') Next

      div(ng-if="state === 'east2'")
        div.card.bg-light(style='text-align: center;')
          h5.card-title Metro Quarter-final 1
          div.card-body.top-group#r1i6(style='display: inline-block; color: black;')
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r1i6winner(type='text')
