      div(ng-if="state == 'conf_2'" style='text-align: center;')
        div(style='display: inline-block;')
          h4 Round 2 Predictions
          ol.list-group.list-group-flush
            li.list-group-item.small-list(ng-repeat="item in results.round2") {{item.winner}} over {{item.loser}} in {{item.games}} games
          br
          a.btn.btn-primary.btn-raised.float-left(ng-click="back('east3')") Back
          a.btn.btn-primary.btn-raised.float-right(ng-click="next('conf_2', 'both1')") Next

      div(ng-if="state == 'both1'")
        div.card.bg-light(style='text-align: center;')
          div.card-body.top-group#r3i0(style='display: inline-block; color: black;')
            h5.card-title Western Conference Finals
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r3i0winner(type='text')
                input#r3i0loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[0][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[1][0]}}
            div
              input.slider#r3i0games(type="text")
              p games
        br
        div.card.bg-light(style='text-align: center;')
          div.card-body.bottom-group#r3i1(style='display: inline-block; color: black;')
            h5.card-title Eastern Conference Finals
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r3i1winner(type='text')
                input#r3i1loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[2][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[3][0]}}
            div
              input.slider#r3i1games(type="text")
              p games
        br
        a.btn.btn-primary.btn-raised.float-left(ng-click="back('conf_2')") Back
        a.btn.btn-primary.btn-raised.float-right.buttontooltip(ng-click="next('both1', 'conf_3')" data-toggle='tooltip' title='Please fill in your guesses for both winning teams.' style='opacity: 0.4;') Next

      div(ng-if="state == 'conf_3'" style='text-align: center;')
        div(style='display: inline-block;')
          h4 Round 3 Predictions
          ol.list-group.list-group-flush
            li.list-group-item.small-list(ng-repeat="item in results.round3") {{item.winner}} over {{item.loser}} in {{item.games}} games
          br
          a.btn.btn-primary.btn-raised.float-left(ng-click="back('both1')") Back
          a.btn.btn-primary.btn-raised.float-right(ng-click="next('conf_3', 'both2')") Next

      div(ng-if="state == 'both2'")
        div.card.bg-light(style='text-align: center;')
          div.card-body.finals-group#r4i0(style='display: inline-block; color: black;')
            h5.card-title Stanley Cup Final
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r4i0winner(type='text')
                input#r4i0loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[0][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[1][0]}}
            div
              input.slider#r4i0games(type="text")
              p games
            div
              input.final-slider#r4i0goals(type="text")
              span#finalsGoals(style="padding-left: 10px;") 10
              p goals
        br
        a.btn.btn-primary.btn-raised.float-left(ng-click="back('conf_3')") Back
        a.btn.btn-primary.btn-raised.float-right.buttontooltip(ng-click="next('both2', 'conf_4')" data-toggle='tooltip' title='Please fill in your guesses for both winning teams.' style='opacity: 0.4;') Finish

      div(ng-if="state == 'conf_4'")
        h4.text-center Confirmation
        p.lead Round 1 Predictions
        ol.list-group.list-group-flush
          li.list-group-item.small-list(ng-repeat="item in results.round1") {{item.winner}} over {{item.loser}} in {{item.games}} games
        hr.my-4
        p.lead Round 2 Predictions
        ol.list-group.list-group-flush
          li.list-group-item.small-list(ng-repeat="item in results.round2") {{item.winner}} over {{item.loser}} in {{item.games}} games
        hr.my-4
        p.lead Conference Finals Prediction
        ol.list-group.list-group-flush
          li.list-group-item.small-list(ng-repeat="item in results.round3") {{item.winner}} over {{item.loser}} in {{item.games}} games
        hr.my-4
        p.lead Stanley Cup Prediction
        ol.list-group.list-group-flush
          li.list-group-item.small-list(ng-repeat="item in results.finals") {{item.winner}} over {{item.loser}} in {{item.games}} games ({{item.goals}} goals)
        br
        hr.my-4
        div.input-group.mb-3
          input(type='text' name='name' id='loginName' class='form-control' placeholder='Name')
        div.input-group.mb-3
          input(type='text' name='email' id='loginEmail' class='form-control' placeholder='Email')
        br
        a.btn.btn-primary.btn-raised.float-left(ng-click="back('both2')") Back
        a.btn.btn-primary.btn-raised.float-right(ng-click="submit()") Submit
  nav.navbar.fixed-bottom
