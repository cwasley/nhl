            div
              input.slider#r1i7games(type="text")
              p games
        br
        a.btn.btn-primary.btn-raised.float-left(ng-click="back('east1')") Back
        a.btn.btn-primary.btn-raised.float-right.buttontooltip(ng-click="next('east2', 'conf_1')" data-toggle='tooltip' title='Please fill in your guesses for both winning teams.' style='opacity: 0.4;') Next

      div(ng-if="state == 'conf_1'" style='text-align: center;')
        div(style='display: inline-block;')
          h4 Round 1 Predictions
          ol.list-group.list-group-flush
            li.list-group-item.small-list(ng-repeat="item in results.round1") {{item.winner}} over {{item.loser}} in {{item.games}} games
          br
          a.btn.btn-primary.btn-raised.float-left(ng-click="back('east2')") Back
          a.btn.btn-primary.btn-raised.float-right(ng-click="next('conf_1', 'west3')") Next
          div.demo

      div(ng-if="state == 'west3'")
        div.card.bg-light(style='text-align: center;')
          div.card-body.top-group#r2i0(style='display: inline-block; color: black;')
            h5.card-title Pacific Semi-final
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r2i0winner(type='text')
                input#r2i0loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[0][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[1][0]}}
            div
              input.slider#r2i0games(type="text")
              p games
        br
        div.card.bg-light(style='text-align: center;')
          div.card-body.bottom-group#r2i1(style='display: inline-block; color: black;')
            h5.card-title Central Semi-final
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r2i1winner(type='text')
                input#r2i1loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[2][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[3][0]}}
            div
              input.slider#r2i1games(type="text")
              p games
        br
        a.btn.btn-primary.btn-raised.float-left(ng-click="back('conf_1')") Back
        a.btn.btn-primary.btn-raised.float-right.buttontooltip(ng-click="next('west3', 'east3')" data-toggle='tooltip' title='Please fill in your guesses for both winning teams.' style='opacity: 0.4;') Next

      div(ng-if="state == 'east3'")
        div.card.bg-light(style='text-align: center;')
          div.card-body.top-group#r2i2(style='display: inline-block; color: black;')
            h5.card-title Atlantic Semi-final
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r2i2winner(type='text')
