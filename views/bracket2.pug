extends layout

block content
  h4.text-center(ng-if="round == 1 && state.substr(0, 4) != 'conf'") Quarter-finals
  h4.text-center(ng-if="round == 2 && state.substr(0, 4) != 'conf'") Semi-finals
  h4.text-center(ng-if="round == 3 && state.substr(0, 4) != 'conf'") Conference Finals
  h4.text-center(ng-if="round == 4 && state.substr(0, 4) != 'conf'") Finals
  div.main-container
    form(id='bracketForm' action='/submit' method='post')
      div(ng-if="state === 'west1'")
        div.card.bg-light(style='text-align: center;')
          div.card-body.top-group#r1i0(style='display: inline-block; color: black;')
            p(style='padding-top: 10px; margin-bottom: 0px;') Pacific Quarter-final 1
            hr(style='margin-top: 4px; margin-bottom: 0px;')
            div.btn-group-vertical(style='width: 80%')
              span.bmd-form-group.is-filled(style="display: none;")
                input#r1i0winner(type='text')
                input#r1i0loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button' value='{{teams[0].city}}')
                p(style='margin-bottom: 0px;') {{teams[0].city}} {{teams[0].mascot}} {{teams[0].seed}}
                p(style='margin-bottom: 0px; font-size: 8pt;') {{teams[0].pts}} pts, {{teams[0].row}} row
              button.btn.btn-raised.btn-secondary(type='button' value='{{teams[1].city}}')
                p(style='margin-bottom: 0px;') {{teams[1].city}} {{teams[1].mascot}} {{teams[1].seed}}
                p(style='margin-bottom: 0px; font-size: 8pt;') {{teams[1].pts}} pts, {{teams[1].row}} row
            p(style='margin-bottom: 0px;') in
            div(style='padding-bottom: 10px;')
              input.slider#r1i0games(type="text")
        br
        div.card.bg-light(style='text-align: center;')
          div.card-body.bottom-group#r1i1(style='display: inline-block; color: black;')
            p(style='padding-top: 10px; margin-bottom: 0px;') Pacific Quarter-final 2
            hr(style='margin-top: 4px; margin-bottom: 0px;')
            div.btn-group-vertical(style='width: 80%')
              span.bmd-form-group.is-filled(style="display: none;")
                input#r1i1winner(type='text')
                input#r1i1loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button' value='{{teams[2].city}}')
                p(style='margin-bottom: 0px;') {{teams[2].city}} {{teams[2].mascot}} {{teams[2].seed}}
                p(style='margin-bottom: 0px; font-size: 8pt;') {{teams[2].pts}} pts, {{teams[2].row}} row
              button.btn.btn-raised.btn-secondary(type='button' value='{{teams[3].city}}')
                p(style='margin-bottom: 0px;') {{teams[3].city}} {{teams[3].mascot}} {{teams[3].seed}}
                p(style='margin-bottom: 0px; font-size: 8pt;') {{teams[3].pts}} pts, {{teams[3].row}} row
            p(style='margin-bottom: 0px;') in
            div(style='padding-bottom: 10px;')
              input.slider#r1i1games(type="text")

      div(ng-if="state === 'west2'")
        div.card.bg-light(style='text-align: center;')
          div.card-body.top-group#r1i2(style='display: inline-block; color: black;')
            h5.card-title Central Quarter-final 1
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r1i2winner(type='text')
                input#r1i2loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[4][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[5][0]}}
            div
              input.slider#r1i2games(type="text")
              p games
        br
        div.card.bg-light(style='text-align: center;')
          div.card-body.bottom-group#r1i3(style='display: inline-block; color: black;')
            h5.card-title Central Quarter-final 2
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r1i3winner(type='text')
                input#r1i3loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[6][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[7][0]}}
            div
              input.slider#r1i3games(type="text")
              p games
        br
        a.btn.btn-primary.btn-raised.float-left(ng-click="back('west1')") Back
        a.btn.btn-primary.btn-raised.float-right.buttontooltip(ng-click="next('west2', 'east1')" data-toggle='tooltip' title='Please fill in your guesses for both winning teams.' style='opacity: 0.4;') Next

      div(ng-if="state === 'east1'")
        div.card.bg-light(style='text-align: center;')
          div.card-body.top-group#r1i4(style='display: inline-block; color: black;')
