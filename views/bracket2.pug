        div.card.bg-light(style='text-align: center;')
          div.card-body.bottom-group#r1i7(style='display: inline-block; color: black;')
            h5.card-title Metro Quarter-final 2
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r1i7winner(type='text')
                input#r1i7loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[14][0]}}
              p.mx-auto v.
