extends layout

block content
  h4.text-center Western Conference
  p.text-center Round 1
  form(id='bracketForm' action='/submit' method='post')
    div.ng-cloak(ng-if="state === 'west1'")
      div.card.bg-light(style='text-align: center;')
        div.card-body(style='display: inline-block; color: black;')
          div.btn-group-vertical
            button.btn.btn-raised.btn-secondary#2-0-text(type='button') Nashville Predators
            p.mx-auto v.
            button.btn.btn-raised.btn-secondary(type='button') Colorado Avalanche
            input(type='Text' style='display:none;' name='r1i0winner')
          div
            div.form-check.form-check-inline
