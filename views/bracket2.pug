          div.card-body.bottom-group#r2i3(style='display: inline-block; color: black;')
            h5.card-title Metro Semi-final
            div.btn-group-vertical
              span.bmd-form-group.is-filled(style="display: none;")
                input#r2i3winner(type='text')
                input#r2i3loser(type='text')
              button.btn.btn-raised.btn-secondary(type='button') {{teams[6][0]}}
              p.mx-auto v.
              button.btn.btn-raised.btn-secondary(type='button') {{teams[7][0]}}
            div
